<!DOCTYPE html>
<html>
<head>
  <title>Gitstarter</title>
  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300&subset=latin,latin-ext' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<main>
  <% if current_user %>
      <h1><%= current_user.first_name %></h1>
  <% else %>
      <%= link_to 'Facebook login', '/auth/facebook' %>
  <% end %>

  <%= yield %>
</main>
</body>
</html>
